<Window x:Class="UdpPacketSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send UDP Packets" Height="150" Width="370">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Send</Label>
            <TextBox Name="PacketsCountTextBox" Width="50" VerticalAlignment="Center"></TextBox>
            <Label>Packets to</Label>
            <TextBox Name="IpTextBox" Width="100" VerticalAlignment="Center"></TextBox>
            <Label>Port</Label>
            <TextBox Name="PortTextBox" Width="40" VerticalAlignment="Center"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Data Size</Label>
            <TextBox Name="DataSizeTextBox" Width="40" VerticalAlignment="Center"></TextBox>
            <Label>Bytes</Label>
        </StackPanel>
        <Button Name="SendPacketsButton" Width="50" Click="SendPacketsButton_Click">Go --></Button>
        <Rectangle Height="2"></Rectangle>
        <Label Name="ResultLable" Width="350" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="1">Idle</Label>
    </StackPanel>
</Window>
