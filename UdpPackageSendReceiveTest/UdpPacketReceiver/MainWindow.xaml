<Window x:Class="UdpPacketReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="120" Width="200">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Port</Label>
            <TextBox Name="PortTextBox" Width="60" VerticalAlignment="Center"></TextBox>
            <Rectangle Width="2"></Rectangle>
            <Button Name="StartReceiveButton" Width="50" VerticalAlignment="Center" Click="StartReceiveButton_Click">Start</Button>
        </StackPanel>
        <Label Name="PacketsCountLabel" HorizontalAlignment="Center">0 packets received</Label>
        <Button Name="ResetCountButton" Width="50" HorizontalAlignment="Center" Click="ResetCountButton_Click">Reset</Button>
    </StackPanel>
</Window>
